{
    "name": "Technitium-Allow",
    "description": "Add domains to Technitium DNS Allowed Zones when NXDOMAIN is encountered.",
    "version": "1.1",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "webRequest",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "src/background.js"
    },
    "action": {
        "default_popup": "src/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png",
            "256": "icons/icon256.png"
        }
    },
    "options_page": "src/options.html"
}
